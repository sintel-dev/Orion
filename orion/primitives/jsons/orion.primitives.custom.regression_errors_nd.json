{
    "name": "orion.primitives.custom.regression_errors_nd",
    "contributors": [
        "Alexander Geiger <geigera@mit.edu>"
    ],
    "description": "Compute an array of absolute errors comparing predictions and expected output.",
    "classifiers": {
        "type": "postprocessor",
        "subtype": "feature_extractor"
    },
    "modalities": [
        "timeseries"
    ],
    "primitive": "orion.primitives.custom.regression_errors_nd",
    "produce": {
        "args": [
            {
                "name": "y",
                "type": "ndarray"
            },
            {
                "name": "y_hat",
                "type": "ndarray"
            }
        ],
        "output": [
            {
                "name": "errors",
                "type": "ndarray"
            }
        ]
    },
    "hyperparameters": {
        "tunable": {
            "smoothing_window": {
                "type": "float",
                "default": 100,
                "range": [
                    1,
                    200
                ]
            }
        }
    }
}
