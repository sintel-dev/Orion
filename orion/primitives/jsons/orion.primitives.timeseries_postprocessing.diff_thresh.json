{
    "name": "diff_thresh",
    "primitive": "orion.primitives.timeseries_postprocessing.diff_thresh",
    "description": "Detects anomalies by calculating n-th order discrete difference",
    "produce": {
        "args": [
            {
                "name": "X",
                "type": "ndarray" 
            }
        ],
        "output": [
            {
                "name": "y",
                "type": "ndarray" 
            }
        ]
    }, 
    "hyperparameters": {
        "tunable": {
            "thresh": {
                "type": "float",
                "default": "0.1"
            },
            "op": {
                "type": "str",
                "default": ">",
                "options": ["<", ">", "<=", ">=", "=="]
            }
        }
    }
}