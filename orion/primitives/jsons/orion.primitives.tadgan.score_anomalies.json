{
    "name": "orion.primitives.tadgan.score_anomalies",
    "contributors": [
        "Alexander Geiger <geigera@mit.edu>",
        "Dongyu Liu <dongyu@mit.edu>",
        "Sarah Alnegheimish <smish@mit.edu>"
    ],
    "description": "Compute an array of anomaly scores based on a combination of reconstruction error and critic output",
    "classifiers": {
        "type": "postprocessor",
        "subtype": "feature_extractor"
    },
    "modalities": ["timeseries"],
    "primitive": "orion.primitives.tadgan.score_anomalies",
    "produce": {
        "args": [
            {
                "name": "y",
                "type": "ndarray"
            },
            {
                "name": "y_hat",
                "type": "ndarray"
            },
            {
                "name": "critic",
                "type": "ndarray"
            },
            {
                "name": "index",
                "type": "ndarray"
            }
        ],
        "output": [
            {
                "name": "errors",
                "type": "ndarray"
            },
            {
                "name": "true_index",
                "type": "ndarray"
            },
            {
                "name": "true",
                "type": "ndarray"
            },
            {
                "name": "predictions",
                "type": "ndarray"
            }
        ]
    },
    "hyperparameters": {
        "tunable": {
            "score_window": {
                "type": "int",
                "default": 10,
                "range": [2, 200]
            },
            "critic_smooth_window": {
                "type": "int",
                "default": null,
                "range": [2, 400]
            },
            "error_smooth_window": {
                "type": "int",
                "default": null,
                "range": [2, 400]
            },
            "rec_error_type": {
                "type": "str",
                "default": "point",
                "options": ["point", "area", "dtw"]
            },
            "comb": {
                "type": "str",
                "default": "mult",
                "options": ["mult", "sum", "rec"]
            },
            "lambda_rec": {
                "type": "float",
                "default": 0.5,
                "range": [0.1, 0.9]
            }
        }
    }
}
