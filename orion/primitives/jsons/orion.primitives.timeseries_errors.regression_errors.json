{
    "name": "orion.primitives.timeseries_errors.regression_errors",
    "contributors": [
        "Carles Sala <csala@csail.mit.edu>"
    ],
    "description": "Compute an array of absolute errors comparing predictions and expected output. Optionally smooth them using EWMA",
    "classifiers": {
        "type": "postprocessor",
        "subtype": "feature_extractor"
    },
    "modalities": [
        "timeseries"
    ],
    "primitive": "orion.primitives.timeseries_errors.regression_errors",
    "produce": {
        "args": [
            {
                "name": "y",
                "type": "ndarray"
            },
            {
                "name": "y_hat",
                "type": "ndarray"
            }
        ],
        "output": [
            {
                "name": "errors",
                "type": "ndarray"
            }
        ]
    },
    "hyperparameters": {
        "tunable": {
            "smooth": {
                "type": "bool",
                "default": true
            },
            "mask": {
                "type": "bool",
                "default": false
            },
            "masking_window": {
                "type": "float",
                "default": 0.01,
                "range": [
                    0.001,
                    0.1
                ]
            },
            "smoothing_window": {
                "type": "float",
                "default": 0.01,
                "range": [
                    0.001,
                    0.1
                ]
            }
        }
    }
}
